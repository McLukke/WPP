@font-face {
  font-family: 'Futura';
  src: url('/wp-content/themes/willeytheme/assets/fonts/FuturaStd-Book.otf');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Futura-Medium';
  src: url('/wp-content/themes/willeytheme/assets/fonts/FuturaStd-Medium.otf');
  font-weight: medium;
  font-style: medium;
}

@font-face {
  font-family: 'Futura-Heavy';
  src: url('/wp-content/themes/willeytheme/assets/fonts/FuturaStd-Heavy.otf');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Futura-Bold';
  src: url('/wp-content/themes/willeytheme/assets/fonts/FuturaStd-Bold.otf');
  font-weight: bold;
  font-style: bold;
}

h1 {
  font-family: "Futura-Bold" !important;
  font-weight: bold ;
  text-transform: uppercase ;
  font-size: 45px ;
  line-height: 54px ;
}

h2 {
  font-family: "Futura-Heavy" ;
  font-weight: bold ;
  text-transform: uppercase ;
  font-size: 10px ;
  line-height: 12px ;
}

body {
  font-family: "Futura";
  font-weight: normal;
  font-size: 14px;
  line-height: 12px;
}

p {
  font-family: "Futura";
  font-weight: normal;
  font-size: 10px;
  line-height: 12px;
}
